<nav role="navigation" class="{{ class_name }}">
  <ul>
    {% for link in linklists[current_menu].links %}
      {% if link.links != blank %}
        <li>
          <a href="{{ link.url }}" class="{% if link.active %}current{% endif %}">{{ link.title | escape }}</a>
          <ul>
            {% for childlink in link.links %}
              {% if childlink.links != blank %}
                <li>
                  <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                  <ul>
                    {% for grandchildlink in childlink.links %}
                      <li>
                        <a href="{{ grandchildlink.url }}">{{ grandchildlink.title | escape }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li>
                  <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </li>
      {% else %}
        <li>
          <a href="{{ link.url }}" class="{% if forloop.index == 1 %}js-show-nav-dropdown{% endif %} {% if link.active %}current{% endif %}">{{ link.title | escape }}</a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</nav>
