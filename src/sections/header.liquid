<div data-section-id="{{ section.id }}" data-section-type="header-section">
  <div class="nav-wrapper-placeholder">
    <div class="fixed-nav-wrapper">
      {%- include 'promo-bar' -%}
      <div class="nav-wrapper container" role="banner">

        {%- include 'block-dropdown-nav' -%}

        <div class="nav-front-layer">
          <!--   LOGO   -->
          {%- include 'nav-logo' -%}

          <div class="inner nav-flyout">

            <!--   NAV   -->
            {%- include 'nav-menu', current_menu: section.settings.main_linklist, class_name: 'left-nav' -%}

            <div class="right-nav">
              <!--   NAV   -->
              {%- include 'nav-menu', current_menu: section.settings.main_linklist_right, class_name: 'right-nav' -%}

              <div class="hide-mobile">
                <!--   CART   -->
                {%- include 'nav-cart-link' -%}
              </div>
            </div>
          </div>

          <div class="mobile-cart-link show-mobile">
            <!--   CART   -->
            {%- include 'nav-cart-link' -%}
          </div>
          <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
          </div>

        </div>


      </div>

    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Promo Bar"
      },
      {
        "id": "promo_bar_text",
        "type": "richtext",
        "label": "Promo Bar Text",
        "info": "Links will be underlined."
      },
      {
        "id": "show_promo_bar",
        "type": "checkbox",
        "label": "Show Promo Bar"
      },
      {
        "id": "promo_bar_bg_color",
        "type": "color",
        "label": "Promo Bar Bg Color"
      },
      {
        "id": "promo_bar_text_color",
        "type": "color",
        "label": "Promo Bar Text Color"
      },
      {
        "type": "header",
        "content": "Nav Settings"
      },
      {
        "id": "logo",
        "type": "url",
        "label": "Logo image"
      },
      {
        "id": "main_linklist",
        "type": "link_list",
        "label": "Right Menu",
        "default": "main-menu"
      },
      {
        "id": "main_linklist_right",
        "type": "link_list",
        "label": "Right Menu"
      },
      {
        "type": "header",
        "content": "Dropdown Navigation"
      },
      {
        "id": "dropdown_list_1_heading",
        "type": "text",
        "label": "Dropdown List 1 Heading",
        "default": "Shop by Category"
      },
      {
        "id": "dropdown_list_1",
        "type": "link_list",
        "label": "Dropdown Menu Left"
      },
      {
        "id": "dropdown_list_2_heading",
        "type": "text",
        "label": "Dropdown List 2 Heading",
        "default": "Shop by Surface"
      },
      {
        "id": "dropdown_list_2",
        "type": "link_list",
        "label": "Dropdown Menu Right"
      },
      {
        "type": "header",
        "content": "Dropdown Image Section"
      },
      {
        "id": "dropdown_image",
        "type": "image_picker",
        "label": "Dropdown Image"
      },
      {
        "id": "dropdown_image_alt",
        "type": "text",
        "label": "Dropdown Image Alt",
        "info": "Write a brief description of this image to improve search engine optimization (SEO) and ADA accessibility."
      },
      {
        "id": "image_section_heading",
        "type": "text",
        "label": "Image Section Heading",
        "default": "Cleaning, elevated."
      },
      {
        "id": "button_text",
        "type": "text",
        "label": "Shop All Text"
      },
      {
        "id": "button_url",
        "type": "url",
        "label": "Shop All URL"
      }
    ]
  }
{% endschema %}
