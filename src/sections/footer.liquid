


<footer class="site-footer container">
  <div class="cols-2">
    <div>
      <!--   LOGO   -->
      {%- include 'nav-logo' -%}
    </div>
    <div class="cols-3 cols-2-sm nav-columns">
      <div>
        <!-- L'avant Menu -->
        {% if section.settings.list_1_heading != blank %}
          <h2>{{ section.settings.list_1_heading | newline_to_br }}</h2>
        {% endif %}
        {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_lavant -%}
        <div class="show-mobile bottom">
          <!-- Social Menu -->
          {% if section.settings.list_4_heading != blank %}
            <h2>{{ section.settings.list_4_heading | newline_to_br }}</h2>
          {% endif %}
          {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_social -%}
        </div>
      </div>

      <div>
        <!-- Support Menu -->
        {% if section.settings.list_2_heading != blank %}
          <h2>{{ section.settings.list_2_heading | newline_to_br }}</h2>
        {% endif %}
        {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_support -%}

        {% if section.settings.list_3_heading != blank %}
          <h2>{{ section.settings.list_3_heading | newline_to_br }}</h2>
        {% endif %}
        <!-- Legal Menu -->
        {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_legal -%}
      </div>

      <div class="hide-mobile">
        <!-- Social Menu -->
        {% if section.settings.list_4_heading != blank %}
          <h2>{{ section.settings.list_4_heading | newline_to_br }}</h2>
        {% endif %}
        {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_social -%}
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="copyright">
    <p>&copy; {{ shop.name | link_to: '/' }} {{ 'now' | date: "%Y" }}</p>
  </div>
</footer>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "url",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "id": "list_1_heading",
        "type": "text",
        "label": "List 1 Heading",
        "default": "L'Avant"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_lavant",
        "label": "First menu",
        "default": "footer"
      },
      {
        "id": "list_2_heading",
        "type": "text",
        "label": "List 2 Heading",
        "default": "Support"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_support",
        "label": "Second menu",
        "default": "footer"
      },
      {
        "id": "list_3_heading",
        "type": "text",
        "label": "List 3 Heading",
        "default": "Legal"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_legal",
        "label": "Third menu",
        "default": "footer"
      },
      {
        "id": "list_4_heading",
        "type": "text",
        "label": "List 4 Heading",
        "default": "Social"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_social",
        "label": "Fourth menu",
        "default": "footer"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      }
    ]
  }

{% endschema %}
