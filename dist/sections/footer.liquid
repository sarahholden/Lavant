


<footer class="site-footer container padded">

  <!--   LOGO   -->
  {%- include 'nav-logo' -%}
  <!-- Social Icons -->
  {%- include 'social-icons' -%}

  <!-- Payment Icons -->
  {% if section.settings.show_payment_icons %}
    {% unless shop.enabled_payment_types == empty %}
      {%- include 'payment-icons' -%}
    {% endunless %}
  {% endif %}

  <!-- Footer Menu -->
  {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_lavant -%}
  <!-- Footer Menu -->
  {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_support -%}
  <!-- Footer Menu -->
  {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_legal -%}
  <!-- Footer Menu -->
  {%- include 'menu-footer', footer_linklist: section.settings.footer_linklist_social -%}

  <!-- Copyright -->
  <div class="copyright">
    <p>{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}.</p>
  </div>
</footer>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "url",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_lavant",
        "label": "First menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_support",
        "label": "Second menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_legal",
        "label": "Third menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_social",
        "label": "Fourth menu",
        "default": "footer"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      }
    ]
  }

{% endschema %}
