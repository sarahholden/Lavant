/* --------------------------------------------------------------------------
Sizing - Gutters
-----------------------------------------------------------------------------*/
$gridColumnGutterSize: 2rem;
$gridRowGutterSize: 1.5rem;

/* --------------------------------------------------------------------------
Grid Styles
-----------------------------------------------------------------------------*/
[class*='cols'] {
	@include tablet-up {
		display: -ms-grid;
		display: grid;
		-ms-grid-rows: auto;
		grid-template-rows: auto;
		grid-column-gap: $gridColumnGutterSize;
		grid-row-gap: $gridRowGutterSize;
		-ms-grid-columns: 1fr;
		grid-template-columns: 1fr;
	}
}

.no-gutters {
	grid-gap: 0;
}

.gutters-xl {
	@include tablet-up {
		grid-gap: 80px;
	}
}

.cols-2 {
	@include tablet-up {
		grid-template-columns: repeat(2, 1fr);
	}
}

.cols-2-sm {
	@include mobile-only {
		display: -ms-grid;
		display: grid;
		-ms-grid-rows: auto;
		grid-template-rows: auto;
		grid-column-gap: $gridColumnGutterSize;
		grid-row-gap: $gridRowGutterSize;
		-ms-grid-columns: 1fr;
		grid-template-columns: 1fr;
		grid-template-columns: repeat(2, 1fr);
	}
}

.cols-2-lg {
	@include desktop-up {
		grid-template-columns: repeat(2, 1fr);
	}
}

