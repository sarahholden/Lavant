/* --------------------------------------------------------------------------
Responsive Mixins
-----------------------------------------------------------------------------*/

/* Adjust breakpoints below if needed  */
$tablet-width: 768px;
$mobile-sm-width: 460px;
$desktop-width: 1024px;
$desktop-lg-width: 1250px;
$monitor-width: 1440px;

@mixin mobile-sm-only {
  @media (max-width: #{$mobile-sm-width}) {
    @content;
  }
}

@mixin mobile-only {
  @media (max-width: #{$tablet-width}) {
    @content;
  }
}

@mixin tablet-down {
  @media (max-width: #{$desktop-width}) {
    @content;
  }
}

@mixin tablet-only {
  @media (max-width: #{$desktop-width}) and (min-width: #{$tablet-width + 1}) {
    @content;
  }
}

@mixin tablet-up {
  @media (min-width: #{$tablet-width + 1}) {
    @content;
  }
}

@mixin desktop-up {
  @media (min-width: #{$desktop-width + 1}) {
    @content;
  }
}

@mixin desktop-sm-down {
  @media (max-width: #{$desktop-lg-width}) {
    @content;
  }
}

@mixin desktop-sm-only {
  @media (min-width: #{$desktop-width + 1}) and (max-width: #{$desktop-lg-width}) {
    @content;
  }
}

@mixin desktop-lg-up {
  @media (min-width: #{$desktop-lg-width + 1}) {
    @content;
  }
}

@mixin monitor-up {
  @media (min-width: #{$monitor-width + 1}) {
    @content;
  }
}

