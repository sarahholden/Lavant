/* --------------------------------------------------------------------------
  TEXT ANIMATIONS
-----------------------------------------------------------------------------*/
[data-reveal="lines-masked"],
[data-reveal="lines-masked-desc"] {
  opacity: 0;
  &.loaded {
    opacity: 1;
  }
  [class^="split-line-"] {
    overflow: hidden;
    padding-bottom: 0.5rem;
    margin-bottom: -.5rem;
  }
}

[data-reveal="lines-masked"],
[data-reveal="lines-masked-desc"] {
  .split-line-child {
    transform: translateY(100%);
    opacity: 0;
    -webkit-transition: opacity 0.35s #{$easeOutSoft},-webkit-transform 0.5s #{$easeOutCustomFast};
    transition: opacity 0.35s #{$easeOutSoft},-webkit-transform 0.5s #{$easeOutCustomFast};
    transition: opacity 0.35s #{$easeOutSoft},transform 0.5s #{$easeOutCustomFast};
    transition: opacity 0.35s #{$easeOutSoft},transform 0.5s #{$easeOutCustomFast},-webkit-transform 0.8s #{$easeOutCustomFast};
    // transition-delay: 0.36s!important;
  }
}

.js-animate [data-reveal="lines-masked"],
.js-animate[data-reveal="lines-masked"],
.js-animate [data-reveal="lines-masked-desc"],
.js-animate[data-reveal="lines-masked-desc"] {
  .split-line-child {
    transform: none;
    opacity: 1;
  }
}

/* --------------------------------------------------------------------------
  SCALING AND SLIDING
-----------------------------------------------------------------------------*/
[data-anim="scale-up"] {
  opacity: 0;
  transform: scale(0);
  transition: all 0.8s $ease;
}

.js-animate [data-anim="scale-up"] {
  opacity: 1;
  transform: none;
  transition: all 0.8s $ease;
}

// Regular Slide
[data-anim="slide"] {
  opacity: 0;
  transform: translateY(2rem);
  transition: all 0.8s $ease;
}

// Regular Slide
[data-anim="dyna-slide"] {
  opacity: 0;
  transform: translateY(20rem);
  @include mobile-only {
    transform: translateY(3rem);
  }
  transition: opacity 1.6s #{$easeOutSoft},transform 1.2s #{$easeInSoft},-webkit-transform 1.2s #{$easeInSoft};
  &.subtle {
    transform: translateY(5rem);

  }
}

.js-animate [data-anim="slide"],
.js-animate[data-anim="slide"],
.js-animate [data-anim="dyna-slide"],
.js-animate[data-anim="dyna-slide"] {
  opacity: 1;
  transform: none;
  transition: all 0.8s $ease;
}

@for $i from 1 through 30 {
  .js-animate [data-anim-order="#{$i}"],
  .split-line-#{$i} .split-line-child {
    transition-delay: ($i - 1) * 0.1s;
  }
}

/* --------------------------------------------------------------------------
Accordions
-----------------------------------------------------------------------------*/
/* Accordion Panel Styles ---------------- */
.accordion-panel {
  border-bottom: 1px solid $borderColor;
  padding: 2rem 0;
  @include tablet-up {
    padding-left: 5.5rem;
  }
  &:first-of-type {
    border-top: 1px solid $borderColor;
  }
  h2 {
    @extend %smallCaps;
    margin-bottom: 0;
    .text {
      transform: translateY(3px);
      display: block;
    }
  }
}

/* Accordion Text Styles ---------------- */
.accordion-text {
  display: none;
  .inner,
  p,
  ul {
    transition: all 0.3s ease-in-out;
    opacity: 0;
  }
  a {
    color: $primaryAnchorColor;
    &:hover {
      color: darken($primaryAnchorColor, 3%);
    }
  }
  p:first-of-type {
    margin-top: 1.4rem;
  }
  p:last-of-type {
    margin-bottom: 1.2rem;
  }
}

/* Clickable accordion headings ---------------- */
.accordion-toggle {
  cursor: pointer;
  position: relative;
  margin-top: 0;
  padding-right: 4.5rem;

  /* Plus / Minus icon */
  .icon {
    cursor: pointer;
    position: absolute;
    right: 1.4rem;
    top: 44%;
    transform: translateY(-50%);
    width: 1.1rem;
    height: 1.1rem;
  }
  .icon::after,
  .icon::before {
    content: "";
    display: block;
    position: absolute;
    top: 50%;
    width: 100%;
    border-bottom: 1px solid black;
  }
  .icon::before {
    transition: all 0.3s ease-in-out;
    transform: rotate(90deg);
  }

  /* Accordion arrow (product detail page) */
  .icon-arrow-down {
    top: 42%;
    width: 1.2rem;
    @include mobile-only {
      width: 0.8rem;
      top: 40%;
    }

  }
}

/* Expanded accordion styles ---------------- */
.expanded {
  .accordion-text {
    .inner,
    p,
    ul {
      transition: all 0.3s ease-in-out 0.2s;
      opacity: 1;
    }
  }
  .accordion-toggle {
    .icon-arrow-down {
      transform: translateY(-50%) rotateX(180deg);
      -webkit-transition: all 0.3s ease-in-out;
      transition: all 0.3s ease-in-out;

    }
    span::before {
      -webkit-transform: rotate(0deg);
      transform: rotate(0deg);
      -webkit-transition: all 0.3s ease-in-out;
      transition: all 0.3s ease-in-out;
    }
    span::after {
      -webkit-transform: rotate(-180deg);
      transform: rotate(-180deg);
      -webkit-transition: all 0.3s ease-in-out;
      transition: all 0.3s ease-in-out;
    }
  }
}

/* --------------------------------------------------------------------------
  PAGINATION ICON
-----------------------------------------------------------------------------*/
.loading-icon-row {
  display: none;
  min-height: 64rem;
}

.loading-icon {
  max-width: 3.6rem;
  margin-left: auto;
  margin-right: auto;
  transform-origin: center;
  &.loading {
    animation: rotate 8s linear forwards infinite;
  }
  svg {
    display: block;
  }
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(3600deg);
  }
}

