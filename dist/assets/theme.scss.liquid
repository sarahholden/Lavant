}

/* Text meant only for screen readers. */
.screen-reader-text {
  border: 0;
  clip: rect(1px, 1px, 1px, 1px);
  clip-path: inset(50%);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
  word-wrap: normal !important;
}


/*================ PARTIALS ================*/
/*-----------------------------------------------------------
Images
-------------------------------------------------------------*/
img {
  display: block;
  max-width: 100%;
}

.bg-image-wrapper {
  position: relative;
  overflow: hidden;
  .bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position-x: 50%;
    background-position-y: 50%;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .text-content {
    z-index: 2;
    position: relative;
  }
}

/* --------------------------------------------------------------------------
  CROPPED IMAGE WRAPPER
-----------------------------------------------------------------------------*/
.cropped-image-wrapper {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 60%;
  overflow: hidden;
  object-fit: cover;

  img {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    transform: translate(-50%, -50%);
    min-height: 100%;
    object-fit: cover;
    width: auto;
    height: auto;
  }
  &.square {
    padding-bottom: 100%;
  }
  &.contain {
    img {
      object-fit: contain;
      object-position: center;
    }
  }
}

/* --------------------------------------------------------------------------
  LAZYLOADED IMAGES
-----------------------------------------------------------------------------*/
.scaling-image-wrapper {
  overflow: hidden;
}

.lazyload {
  opacity: 0;
}

img.fade-in {
  opacity: 0;
  transition: all 0.3s ease-in-out;
  &.lazyloaded {
    opacity: 1;
  }
}

img.fade-and-scale {
  opacity: 0;
  transition: all 0.3s ease-in-out;
  &.lazyloaded {
    animation: fadeAndScaleImg 0.6s $easeInOutSoft forwards;
  }
}

@keyframes fadeAndScaleImg {
  0% {
    opacity: 0;
    transform: scale(1.08);
  }
  100% {
    opacity: 1;
    transform: none;

  }
}

/*-----------------------------------------------------------
Responsive Videos
-------------------------------------------------------------*/
.video-wrapper {
  position: relative;
  padding-bottom: 56.3%;
  height: 0;
  overflow: hidden;
  background-size: cover;
  background-position: center center;
  margin-bottom: 2rem;
  // Used for placeholder image
  .placeholder {
    z-index: 1;
  }
  iframe {
    position: absolute;
    top: 0;
    left: 0;
    border: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }
  .video-play-button {
    background: rgba(38, 57, 88, .85);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 5;
    transition: opacity 0.3s ease-in-out;
  }
  &.playing {
    .video-play-button {
      opacity: 0;
      pointer-events: none;
    }
  }
}

